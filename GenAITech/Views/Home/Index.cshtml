    .custom-tile {
        position: relative;
        background-color: #d2b48c;
        transition: background-color 0.5s;
        padding: 20px;
        text-align: center;
        height: 200px;
    }

        .custom-tile:hover {
            background-color: #a78c64;
        }

    .tile-title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 20px;
        color: #fff;
        transition: opacity 0.5s;
        opacity: 1;
    }

    .custom-tile:hover .tile-title {
        opacity: 0;
    }

    .tile-image {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
    }

    .custom-tile:hover .tile-image {
        display: block;
    }
</style>



